{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@levi-m/core": ["./src/core/index"],
      "@levi-m/core-ui": ["./src/core-ui/index"],

      "@levi-a/about": ["./src/apps/about/index"],
      "@levi-a/demo": ["./src/apps/demo/index"],
      "@levi-a/home": ["src/apps/home/index"],
      
      "@levi-a/user": ["src/apps/user/user/index"],
      "@levi-a/user-service": ["src/apps/user/service/index"],
      "@levi-a/user-models": ["src/apps/user/models/index"],

    }
  },
  "include": ["./src"]
}
