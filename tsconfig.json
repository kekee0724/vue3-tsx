{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@levi-m/core": ["./src/core/index"],
      "@levi-m/core-ui": ["./src/core-ui/index"],

      "@levi-a/about": ["./src/apps/about/index"],
      "@levi-a/index": ["./src/apps/index/index"],

    }
  },
  "include": ["./src"]
}
