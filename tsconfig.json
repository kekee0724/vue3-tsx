{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/typings"],
    "paths": {
      "@/*": ["src/*"],
      "@reco-m/core": ["./src/core/index"],
      "@reco-m/core-ui": ["./src/core-ui/index"],

      "@reco-m/about": ["./src/apps/about/index"],
      "@reco-m/home": ["./src/apps/home/index"]
    }
  },
  "include": ["./src"]
}
